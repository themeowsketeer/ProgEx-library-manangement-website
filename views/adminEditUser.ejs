<!DOCTYPE html>
<html lang="english">
    <%- include('layouts/header'); -%>
  <body>
    <div>
      <link href="/css/admin-add-user.css" rel="stylesheet" />

      <div class="add-user-container">
        <div class="add-user-header">
            <%- include('layouts/navbar'); -%>
            <%- include('layouts/adminheader'); -%>
        </div>
        <div class="add-user-container2">
          <div class="add-user-login">
            <div class="add-user-background">
              <h1 class="add-user-text06">Add user</h1>
              <form action="/admin/storeEditUser/<%= detailedUser._id %>" method="POST" class="add-user-form">
                <div class="add-user-full-name">
                  <label for="fullName" class="add-user-text07">
                    First name
                  </label>
                  <input
                    type="text"
                    id="userInfo.FName"
                    name="userInfo.FName"
                    class="add-user-textinput input"
                    value="<%= detailedUser.userInfo.FName %>"
                  />
                </div>
                <div class="add-user-full-name">
                  <label for="fullName" class="add-user-text07">
                    Last name
                  </label>
                  <input
                    type="text"
                    id="userInfo.LName"
                    name="userInfo.LName"
                    class="add-user-textinput input"
                    value="<%= detailedUser.userInfo.LName %>"
                  />
                </div>
                <div class="add-user-username">
                  <label for="username" class="add-user-text08">Username</label>
                  <input
                    type="text"
                    id="username"
                    name="username"
                    class="add-user-textinput1 input"
                    value="<%= detailedUser.username %>"
                  />
                </div>
                <div class="add-user-edition">
                  <label for="Age" class="add-user-text09">Age</label>
                  <input
                    type="text"
                    id="userInfo.age"
                    name="userInfo.age"
                    class="add-user-textinput2 input"
                    value="<%= detailedUser.userInfo.age %>"
                  />
                </div>
                <div class="add-user-pub-year">
                  <label for="Email" class="add-user-text10">Email</label>
                  <input
                    type="text"
                    id="email"
                    name="email"
                    class="add-user-textinput3 input"
                    value="<%= detailedUser.email %>"
                  />
                </div>
                <button type='submit' class="add-user-login1 button">Submit</button>
              </form>
            </div>
          </div>
        </div>
        <%- include('layouts/footer'); -%>
      </div>
    </div>
  </body>
</html>
