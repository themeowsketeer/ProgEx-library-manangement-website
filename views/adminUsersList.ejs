<!DOCTYPE html>
<html lang="english">
  <%- include('layouts/header'); -%>
  <body>
    <div>
      <link href="/css/admin-user-board.css" rel="stylesheet" />
      <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />
      <div class="admin-user-board-container">
        <div class="admin-user-board-container1">
          <%- include('layouts/navbar'); -%>
          <%- include('layouts/adminheader'); -%>
          <br>
          <br>
          <br>
          <a href="/adminUsersList/addUser">
            <button
            id="add new user"
            type="submit"
            class="admin-user-board-add-new-user-button button">
            Add new user
            </button>
          </a>
          <br>
        </div>
          <div class="admin-user-board-adminuserboard">
            <div class="admin-user-board-container3">
              <!-- <div class="admin-user-board-newusertable"> -->
                <table id = "table" class="display" style="width:100%">
                  <thead>
                    <tr>
                      <th class="admin-user-board-text006">ID</th>
                      <th class="admin-user-board-text008">Full name</th>
                      <th class="admin-user-board-text009">Username</th>
                      <th class="admin-user-board-text010">Age</th>
                      <th class="admin-user-board-text012">Email</th>
                      <th class="admin-user-board-text014">Created</th>
                      <th class="admin-user-board-text016">Borrowed</th>
                      <th class="admin-user-board-text016">Edit</th>
                      <th class="admin-user-board-text016">Delete</th>
                      <th class="admin-user-board-text016">Info</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (var i = 0; i < usersList.length; i++) { %>
                    <tr>
                      <td class="admin-user-board-text017">
                        <%= 
                        usersList[i]._id.toString().substring( 17, 24 ) 
                        %>
                      </td>
                      <td class="admin-user-board-text019">
                        <%= usersList[i].userInfo.FName %> <%= usersList[i].userInfo.LName %>
                      </td>
                      <td class="admin-user-board-text021"><%= usersList[i].username %></td>
                      <td class="admin-user-board-text022"><%= usersList[i].userInfo.age %></td>
                      <td class="admin-user-board-text024"><%= usersList[i].email %></td>
                      <td class="admin-user-board-text026">
                        <%= usersList[i].createdAt.toDateString() %>
                      </td>
                      <td class="admin-user-board-text029"><%= usersList[i].booksBorrowing.length %></td>
                      <td>
                        <a href="/adminUsersList/edit/<%= usersList[i]._id %>">
                          <img
                            alt="draw13434"
                            src="playground_assets/draw13434-8jw-200w.png"
                            class="admin-user-board-draw1"
                          />
                        </a>
                      </td>
                      <td>
                        <a href="/adminUsersList/deleteWarn/<%= usersList[i]._id %>">
                          <img
                            alt="trashcan13434"
                            src="playground_assets/trashcan13434-meoe-200w.png"
                            class="admin-user-board-trashcan1"
                          />
                        </a>
                      </td>
                      <td>
                        <a href="/adminUsersList/<%= usersList[i]._id %>">
                          <img
                            alt="image"
                            src="playground_assets/trashcan13831-is4-200w.png"
                            class="admin-user-board-image01"
                          />
                        </a>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              <!--</div> -->
            </div>
          </div>
        </div>
        <!--footer-->
        <%- include('layouts/footer'); -%>
      </div>
    </div>
  </body>
  <!--Script-->
  <%- include('layouts/script'); -%>
  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
  <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
  <script src="js/tablesorting.js" type="text/javascript"></script>
</html>
