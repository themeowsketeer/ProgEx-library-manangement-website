<!DOCTYPE html>
<html lang="english">
  <%- include('layouts/header'); -%>
  <body>
    <div>
      <link href="./css/admin-book-board.css" rel="stylesheet" />
      <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />
      <div class="admin-book-board-container">
        <div class="admin-book-board-container01">
          <%- include('layouts/navbar'); -%>
          <%- include('layouts/adminheader'); -%>
          <div class="admin-book-board-searchbar">
            <a href="/adminBooksList/addBook">
              <button
                id="add new user"
                type="submit"
                class="admin-book-board-add-new-user-button button">
                Add new Book
              </button>
            </a>
          </div>
          <div class="admin-book-board-adminuserboard">
            <div class="admin-book-board-container03">
              <table style="width: 100%;" id = "table">
                <thead>
                  <tr>
                    <th class="admin-book-board-text006">ID</th>
                    <th class="admin-book-board-text008">Title</th>
                    <th class="admin-book-board-text009">Author</th>
                    <th class="admin-book-board-text010">ISBN</th>
                    <th class="admin-book-board-text012">Uploaded date</th>
                    <th class="admin-book-board-text013">Quan.</th>
                    <th class="admin-book-board-text014">Edit</th>
                    <th class="admin-book-board-text014">Delete</th>
                    <th class="admin-book-board-text014">Info</th>
                  </tr>
                </thead>
                <tbody>
                  <% for (var i = 0; i < booksList.length; i++) { %>
                  <tr>
                    <!-- <td>
                      <img
                        alt="image"
                        src="playground_assets/user112951-5rs-200h.png"
                        class="admin-book-board-image"
                      />
                    </td> -->
                    <td class="admin-book-board-text015">
                      <%= 
                      booksList[i]._id.toString().substring( 17, 24 ) 
                      %>
                    </td>
                    <td class="admin-book-board-text016"><%= booksList[i].title %></td>
                    <td class="admin-book-board-text017">
                      <% for (var j = 0; j < booksList[i].author.length; j++) { %> 
                        <%= 
                        booksList[i].author[j] 
                        %> |
                      <% } %>
                    </td>
                    <td class="admin-book-board-text018"><%= booksList[i].internationalNumber %></td>
                    <td class="admin-book-board-text020"><%= booksList[i].createdAt.toDateString() %></td>
                    <td class="admin-book-board-text023"><%= booksList[i].copiesAvailable %></td>
                    <br/>
                    <td>
                      <a href="/adminBooksList/edit/<%= booksList[i]._id %>">
                        <img
                          alt="draw13434"
                          src="playground_assets/draw13434-8jw-200w.png"
                          class="admin-book-board-draw1"
                        />
                      </a>
                    </td>
                    <td>
                      <a href="/adminBooksList/deleteWarn/<%= booksList[i]._id %>">
                        <img
                          alt="trashcan13434"
                          src="playground_assets/trashcan13434-meoe-200w.png"
                          class="admin-book-board-trashcan1"
                        />
                      </a>
                    </td>
                    <td>
                      <a href="/book-info/<%= booksList[i]._id %>">
                        <img
                          alt="image"
                          src="playground_assets/trashcan13831-is4-200w.png"
                          class="admin-book-board-image01"
                        />
                      </a>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
            <!-- <div class="admin-book-board-rectangle50">
              <img
                alt="Rectangle513521"
                src="playground_assets/rectangle513521-a7pb-200w.png"
                class="admin-book-board-rectangle51"
              />
            </div> -->
          </div>
        </div>
        <!--footer-->
        <%- include('layouts/footer'); -%>
      </div>
    </div>
  </body>
  <!--Script-->
  <%- include('layouts/script'); -%>
  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
  <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
  <script src="js/tablesorting.js" type="text/javascript"></script>
</html>
